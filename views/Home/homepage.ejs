<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Instagram Clone</title>
    <link rel="stylesheet" href="/css/homepage.style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
  </head>
  <body>
    <header>
      <div class="navbar">
        <h1 class="logo">Instagram</h1>
        <input type="text" placeholder="Search" class="search-bar" />
        <div class="nav-icons">
          <a href="/home"><i class="fa-solid fa-house"></i></a>
          <a href="/messages"><i class="fa-regular fa-paper-plane"></i></a>
          <a href="/home/create-post"
            ><i class="fa-regular fa-square-plus"></i
          ></a>
          <a href="/notifications"><i class="fa-regular fa-heart"></i></a>
          <a href="/api/auth/logout"><i class="fa-regular fa-user"></i></a>
        </div>
      </div>
    </header>

    <main>
      <section class="stories">
        <div class="story">Story 1</div>
        <div class="story">Story 2</div>
        <div class="story">Story 3</div>
        <div class="story">Story 4</div>
      </section>
      <section class="feed">
        <% posts.forEach(val => { %>

        <div class="post">
          <div class="topp" style="display: flex; justify-content: space-between;">
          <h3><%= val.user.name %></h3>
          <a href="/home/follow/<%= val.user._id %>" class="like-btn">
            <i class="fa-regular fa-heart"></i> Follow
        </a>
        <span class="comment-btn">
          <span class="comment-count"><%= val.user.followers.length %></span> Followers
        </span>
        </div>
          <img
            src="<%=val.imageUri %>"
            alt="Post Image"
          />
          <p><%= val.caption %></p>

          <div class="post-actions">
            <a href="/home/like/<%= val._id %>" class="like-btn">
                <i class="fa-regular fa-heart"></i> Like
            </a>
            <button class="comment-btn">
              <i class="fa-regular fa-comment"></i> Comment
            </button>
            <div class="gap">
              <span class="like-btn">
                <span class="like-count"><%= val.likes.length %></span> likes
              </span>
              <span class="comment-btn">
                <span class="comment-count">0</span> comments
              </span>
            </div>
          </div>
        </div>

        <% }); %>
      </section>

      <aside class="sidebar">
        <h3>Suggestions for You</h3>
        <p>Follow User 1</p>
        <p>Follow User 2</p>
        <p>Follow User 3</p>
      </aside>
    </main>
  </body>
</html>
